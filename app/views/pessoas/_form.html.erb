<%= form_for(@pessoa) do |f| %>
  <% if @pessoa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pessoa.errors.count, "erros") %> não permitiram este cadastro ser realizado:</h2>

      <ul>
        <% @pessoa.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
<fieldset>  

  <fieldset class="grupo">  
    <div class="field">
      <%= f.label "Nome:" %>
      <%= f.text_field :nome, size: 75 %>
    </div>
  </fieldset>

  <fieldset class="grupo">
    <div class="field">
      <%= f.label "CPF:" %>
      <%= f.text_field :cpf %>
    </div>
    
    <div class="field">
      <%= f.label "Data de Nascimento:" %>
      <%= f.date_select :dataNascimento %>
    </div>
  </fieldset>
  
  <fieldset class="grupo">
    <div class="field">
      <%= f.label "E-mail:" %>
      <%= f.text_field :email, size: 50 %>
    </div>  
  </fieldset>
  
  <fieldset class="grupo"> 
    <div class="field">
      <%= f.label "Login:" %>
      <%= f.text_field :login %>
    </div>
  
    <div class="field">
      <%= f.label "Senha:" %>
      <%= f.password_field :senha %>
    </div>
  
    <div class="field">
      <%= f.label "Confirmação de Senha:" %>
      <%= f.password_field :senha_confirmation %>
    </div>
  </fieldset>
  
  <fieldset class="grupo">
    <div class="field">
      Perfil:
      <label><%= f.radio_button :perfil, "1" %>Usuário</label>
      <label><%= f.radio_button :perfil, "0" %>Administrador</label>
    </div>
  </fieldset>

  <fieldset class="grupo">
    <div class="field">
       <label><%= f.check_box(:ativo) %> Ativo </label>
    </div>
  </fieldset>
  
  <fieldset class="grupo">
    <div class="field">
      <%= f.button 'Enviar', :class => 'botao'%>
    </div>
    
  </fieldset>
</fieldset> 
 

<% end %>
